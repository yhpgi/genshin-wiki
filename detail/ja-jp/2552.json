      },
      {
        "type": "CustomImage",
        "url": "https:/act-upload.hoyoverse.com/event-ugc-hoyowiki/2025/04/27/317536791/f19702e45eced723def951bcc830afd5_8910432614608708544.png",
        "alignment": "left"
