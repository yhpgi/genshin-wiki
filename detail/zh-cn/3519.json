      },
      {
        "type": "CustomImage",
        "url": "https:/act-upload.hoyoverse.com/event-ugc-hoyowiki/2024/01/31/157749474/8bc518d53d3899029ce70ee69300c4c9_7451866355168463419.png",
        "alignment": "left"
